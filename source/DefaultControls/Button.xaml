    <Style x:Key="GameInfoButton" TargetType="CheckBoxEx">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="IsChecked" Value="False"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBoxEx">
                    <Grid Background="{TemplateBinding Background}">
                        <Border x:Name="VerticalBubbleFocus" Background="Transparent" CornerRadius="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Text" Text="{DynamicResource LOCGameDetails}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="22" Foreground="#e0e4e7" Padding="30,10,0,10"/>
                                <TextBlock x:Name="Checked" Text="&#xeed7;" FontFamily="{StaticResource FontIcoFont}" Visibility="Hidden"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" Padding="0,0,10,0"
                                                       Foreground="#52ac3a" FontSize="20" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="White" TargetName="VerticalBubbleFocus" />
                            <Setter Property="Foreground" Value="#23262e" TargetName="Text" />
                            <Setter Property="Foreground" Value="{DynamicResource TextBrushDark}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="White" TargetName="VerticalBubbleFocus" />
                            <Setter Property="Foreground" Value="#23262e" TargetName="Text" />
                            <Setter Property="Foreground" Value="{DynamicResource TextBrushDark}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#565D6A" TargetName="VerticalBubbleFocus" />
                            <Setter Property="Visibility" Value="Visible" TargetName="Checked"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding ElementName=ZoomButton, Path=IsChecked}" Value="True">
                            <Setter Property="Focusable" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=MediaButton, Path=IsChecked}" Value="True">
                            <Setter Property="IsChecked" Value="False"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
