    <Style x:Key="ContextButton" TargetType="Button">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Padding" Value="12,5,12,5" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="{TemplateBinding Background}">
                        <Border Margin="0" CornerRadius="3"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                Background="#32383c"/>
                        <Border x:Name="BorderFocus" Margin="0" CornerRadius="3"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                Background="#52ac3a" Visibility="Hidden" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="Icon" Text="&#xec74;" FontFamily="{DynamicResource FontIcoFont}" FontSize="32" 
                                       VerticalAlignment="Center" HorizontalAlignment="Left"
                                       Foreground="{TemplateBinding Foreground}" Margin="30,0,20,0"/>

                            <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="24" FontWeight="SemiBold"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   Margin="{TemplateBinding Padding}">                            
                                <ContentPresenter />
                            </TextBlock>
                        </StackPanel>                        
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                            <Setter Property="Text" Value="&#xef08;" TargetName="Icon" />
                            <Setter Property="Background" Value="{DynamicResource SelectionBrush}" TargetName="BorderFocus" />
                        </DataTrigger>
                        
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource TextBrushDark}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding ElementName=ZoomButton, Path=IsChecked}" Value="True">
                            <Setter Property="Focusable" Value="False"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GameInfoButton" TargetType="CheckBoxEx">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="IsChecked" Value="False"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBoxEx">
                    <Grid Background="{TemplateBinding Background}">
                        <Border x:Name="VerticalBubbleFocus" Background="{DynamicResource BubbleBrush}" CornerRadius="22" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Text" Text="{DynamicResource LOCGameDetails}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="22" FontWeight="Bold" Foreground="#e0e4e7" Padding="30,10,30,10"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="White" TargetName="VerticalBubbleFocus" />
                            <Setter Property="Foreground" Value="#23262e" TargetName="Text" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="#565D6A" TargetName="VerticalBubbleFocus" />
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" TargetName="Text" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#565D6A" TargetName="VerticalBubbleFocus" />
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" TargetName="Text" />
                        </Trigger>                        
                        <DataTrigger Binding="{Binding ElementName=ZoomButton, Path=IsChecked}" Value="True">
                            <Setter Property="Focusable" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=MediaButton, Path=IsChecked}" Value="True">
                            <Setter Property="IsChecked" Value="False"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

